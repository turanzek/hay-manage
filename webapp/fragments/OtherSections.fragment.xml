<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:uxap="sap.uxap" xmlns:upload="sap.m.upload">

	<uxap:ObjectPageSection title="Dosyalar" titleUppercase="false">
		<uxap:subSections>
			<uxap:ObjectPageSubSection>
				<uxap:blocks>
					<upload:UploadSet id="UploadSet" instantUpload="false" noDataText="Dosya yüklenmedi" noDataDescription="Sürükleyip bırakarak ya da dosya yükle butonnunu kullanarak dosya yükleyebilirsiniz." terminationEnabled="false" maxFileNameLength="55" beforeUploadStarts="onBeforeUploadStarts" uploadCompleted="onUploadCompleted" class="sapUiResponsiveMargin" items="{application>Files/results}" uploadUrl="/sap/opu/odata/sap/ZMM_HAY_MANAGE_SRV/FilesSet" uploadEnabled="{application>UiConfig/UploadEditable}" >
						<upload:items>
							<upload:UploadSetItem fileName="{application>FileName}" mediaType="{application>MimeType}" url="{application>FileUrl}" enabledEdit="{application>Editable}" enabledRemove="{application>Editable}"></upload:UploadSetItem>
						</upload:items>
					</upload:UploadSet>
				</uxap:blocks>
			</uxap:ObjectPageSubSection>
		</uxap:subSections>
	</uxap:ObjectPageSection>

	<uxap:ObjectPageSection title="Yorumlar" titleUppercase="false" visible="{application>UiConfig/CommentsActive}">
		<uxap:subSections>
			<uxap:ObjectPageSubSection>
				<uxap:blocks>
					<List items="{application>Actions/results}">

						<FeedListItem sender="{application>CreateUname} {application>CreateName}" info="{application>ActionText}" timestamp="{ path : 'application>Timestamp' , type: 'sap.ui.model.type.DateTime', formatOptions: { style: 'medium' } }" text="{application>Note}" convertLinksToAnchorTags="All"></FeedListItem>
					</List>
				</uxap:blocks>
			</uxap:ObjectPageSubSection>
		</uxap:subSections>
	</uxap:ObjectPageSection>

	<uxap:ObjectPageSection title="Onaycılar" titleUppercase="false" visible="{application>UiConfig/ApproversActive}">
		<uxap:subSections>
			<uxap:ObjectPageSubSection>
				<uxap:blocks>
					<Table mode="SingleSelectMaster" itemPress="handleItemPress" items="{application>ApproveSteps/results}">
						<columns>
							<Column>
								<Text text="Adım" />
							</Column>
							<Column>
								<Text text="Adım tanımı" />
							</Column>
							<Column>
								<Text text="Onaycı" />
							</Column>
							<Column>
								<Text text="Onaycı adı" />
							</Column>
						</columns>
						<items>
							<ColumnListItem>
								<cells>
									<ObjectStatus icon="{=  ${application>IsActive} ? 'sap-icon://accept' : 'None'}" text="{application>StepCode}" />
									<ObjectIdentifier text="{application>StepDescription}" />
									<ObjectIdentifier text="{application>Approver}" />
									<ObjectIdentifier text="{application>ApproverName}" />
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</uxap:blocks>
			</uxap:ObjectPageSubSection>
		</uxap:subSections>
	</uxap:ObjectPageSection>


</core:FragmentDefinition>